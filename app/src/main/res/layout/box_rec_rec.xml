<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/box_r_r_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corners_ripple"
        android:backgroundTint="#bd0b41"
        app:layout_constraintBottom_toBottomOf="@+id/box_r_r_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/box_r_r_edit"
        app:layout_constraintTop_toTopOf="@+id/box_r_r_edit"
        app:srcCompat="@drawable/delete" />

    <ImageButton
        android:id="@+id/box_r_r_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corners_ripple"
        android:backgroundTint="#0b2cbd"
        app:layout_constraintBottom_toBottomOf="@+id/box_r_r_clock"
        app:layout_constraintEnd_toStartOf="@+id/box_r_r_delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/box_r_r_clock"
        app:layout_constraintTop_toTopOf="@+id/box_r_r_clock"
        app:srcCompat="@drawable/edit_icon" />

    <TextView
        android:id="@+id/box_r_r_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:inputType="time"
        android:text="5:45 pm"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>