<resources>

    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="toolbarStyle">@style/AppToolbarStyle</item>
        <item name="expandedTitleTextAppearance">@style/ExpandedTitleAppearance</item>
        <item name="collapsedTitleTextAppearance">@style/CollapseTitleAppearance</item>
        <item name = "textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name = "materialButtonStyle">@style/AppMaterialButtonStyle</item>
        <item name="materialCardViewStyle">@style/AppMaterialCardViewStyle</item>
        <item name = "imageButtonStyle">@style/AppImageButtonStyle</item>
        <item name="navigationViewStyle">@style/AppNavigationViewStyle</item>
    </style>


    <style name="AppToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/AppTitleTextStyle</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextColor">#ffffff</item>
    </style>

    <style name="AppTitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AppMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="AppMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="AppImageButtonStyle" parent="Widget.AppCompat.ImageButton">
    </style>

    <style name="AppNavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="itemTextAppearance">@style/NavigationViewText</item>
    </style>

    <!-- Text Appearances -->
    <style name="TitleTextAppearnce" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CollapseTitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ExpandedTitleAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="NavigationViewText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
        <item name="fontFamily">@font/baloo</item>
    </style>

    <style name="GeneralRoundButton" parent ="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/round_corners_ripple</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="GeneralInfomationText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20dp</item>
    </style>



</resources>
